{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://www.alpinebits.org/schemas/v1/general/NotificationSubscription",
  "title": "NotificationSubscription",
  "type": "object",
  "required": [
    "@type"
  ],
  "properties": {
    "@type": {
      "const": "NotificationSubscription"
    },
    "resourceType": {
      "type": "string",
      "enum": [
        "/agents",
        "/eventSeries",
        "/events",
        "/lifts",
        "/mediaObjects",
        "/mountainAreas",
        "/places",
        "/snowReports",
        "/snowparks",
        "/trails"
      ]
    },
    "watchingResources": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "events": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "string",
        "enum": [
          "add",
          "modify",
          "delete"
        ]
      }
    },
    "conditions": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "string",
        "pattern": "([a-z|A-Z]+([/]{1})([a-z|A-Z]+))"
      }
    },
    "callbackURL": {
      "type": "string",
      "format": "uri"
    },
    "secret": {
      "type": "string",
      "minLength": 1
    }
  }
}